<%= simple_form_for [:admin, household] do |f| %>
  <%= f.input(:street_address, :input_html => {:size => 100}) %>
  <%= f.input(:city) %>
  <%= f.input(:province) %>
  <%= f.input(:country, :as => :string) %>
  <%= f.input(:postal_code) %>
  <%= f.input(:gift) %>

  <%= f.submit %>
  <%= link_to('Cancel', admin_households_path) %>
  <%= link_to('Destroy', admin_household_path(household), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this household?'}) if household.persisted? %>
<% end %>
